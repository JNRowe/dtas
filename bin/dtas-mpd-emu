# MPD protocol emulation proxy in front of dtas-player
require 'socket'
require 'dtas/mpd_emu_client'
require 'dtas/server_loop'
l = TCPServer.new('127.0.0.1', 2100)
svc = DTAS::ServerLoop.new([l], DTAS::MpdEmuClient)
svc.run_forever
